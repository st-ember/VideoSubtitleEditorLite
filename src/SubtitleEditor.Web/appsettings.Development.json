{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "Version": "1.0.38",

  "StorageFolder": "Storage",
  "StorageCacheFolder": "Storage",
  "DBFolder": "DB",
  "StreamFolder": "Streams",
  "FileFolder": "Files",
  "WorkspaceFolder": "Workspace",
  "ConfigurationFolder": "Configurations",
  "DBFile": "vse.db",

  "SystemOption": {
    "UseConfiguration": true
  },

  "StreamConverter": {
    "FFMpegFolder": "FFMpeg",
    "FFMpegPath": "ffmpeg.exe",
    "FFProbePath": "ffprobe.exe",
    "ArgumentTemplate": "-i \"{sourceFilePath}\" -b:v 250000 -vf scale=842:-2 -codec:a aac -ac 2 -hls_time 10 -hls_list_size 0 \"{outputPath}\""
  },

  "Security": {
    "UseSsl": true,
    "DetailedErrors": true
  }
}
